<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/btnCropBubbleOptionClick"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_crop_bubble_option_height_n"
        android:background="@drawable/bg_capsule_crop_bubble_option"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="1dp"
            android:ems="5"
            android:gravity="center"
            android:text="点击"
            android:textColor="#222"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_v3_click" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/btnCropBubbleOptionOffset"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_crop_bubble_option_height_n"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_capsule_crop_bubble_option"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="1dp"
            android:ems="5"
            android:gravity="center"
            android:text="偏移点击"
            android:textColor="#222"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_v3_offset_click" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/btnCropBubbleOptionSlide"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_crop_bubble_option_height_n"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_capsule_crop_bubble_option"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="1dp"
            android:ems="5"
            android:gravity="center"
            android:text="滑动"
            android:textColor="#222"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_v3_slide" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnCropBubbleOptionNonExist"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_crop_bubble_option_height_n"
        android:layout_below="@id/btnCropBubbleOptionSlide"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_capsule_crop_bubble_option"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_script_tools_stream_action_nonexsit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="1dp"
            android:ems="5"
            android:gravity="center"
            android:text="设为不存在"
            android:textColor="#222"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnCropBubbleOptionFinish"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_crop_bubble_option_height_n"
        android:layout_below="@id/btnCropBubbleOptionNonExist"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_capsule_crop_bubble_option"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="1dp"
            android:ems="5"
            android:gravity="center"
            android:text="结束任务"
            android:textColor="#222"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_script_finish_task" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:baselineAligned="false">




        <FrameLayout
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:id="@+id/btnCropBubbleOptionConfirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/dimen_crop_bubble_option_height"
                android:layout_height="@dimen/dimen_crop_bubble_option_height"
                android:contentDescription="@null"
                android:src="@drawable/ic_crop_done" />
        </FrameLayout>


        <FrameLayout
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:id="@+id/btnCropBubbleOptionCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_gravity="end"
                android:layout_width="@dimen/dimen_crop_bubble_option_height_n"
                android:layout_height="@dimen/dimen_crop_bubble_option_height_n"
                android:background="@drawable/bg_capsule_crop_bubble_option"
                android:contentDescription="@null"
                android:padding="7dp"
                android:src="@drawable/ic_close" />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>