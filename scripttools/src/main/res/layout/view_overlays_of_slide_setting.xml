<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <View
        android:id="@+id/bg_frame"
        android:layout_width="74dp"
        android:layout_height="146dp"
        android:layout_gravity="right"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/bg_v2_slide_setting_buttons_frame"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <View
        android:id="@+id/button_slide_start"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:background="@drawable/ic_slice_start_setting"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@id/bg_frame"
        app:layout_constraintRight_toRightOf="@id/bg_frame"
        app:layout_constraintTop_toTopOf="@id/bg_frame"
        >

    </View>

    <View
        android:id="@+id/button_slide_end"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_slice_end_setting"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/bg_frame"
        app:layout_constraintLeft_toLeftOf="@id/bg_frame"
        app:layout_constraintRight_toRightOf="@id/bg_frame"
        app:layout_constraintTop_toBottomOf="@id/button_slide_start"
        tools:ignore="RtlHardcoded">

    </View>


</merge>