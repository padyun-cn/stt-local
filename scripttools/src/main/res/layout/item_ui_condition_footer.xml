<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/flag"
        android:layout_width="@dimen/dimen_v3_img_width"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dimen_v3_inner_margin_top_bt"
        android:layout_marginTop="@dimen/dimen_v3_inner_margin_top_bt"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,39:23"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/circle"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:src="@drawable/ic_triangle"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/flag"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <View
        android:id="@+id/circle_t"
        app:layout_constraintBottom_toTopOf="@id/circle"
        app:layout_constraintLeft_toLeftOf="@id/circle"
        app:layout_constraintRight_toRightOf="@id/circle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="1dp"
        android:background="#B5B5B5"
        android:layout_height="0dp"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>