<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/testContainer"
    android:background="#ededed"
    android:layout_above="@id/bottomBar"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    >

    <fragment
        android:id="@+id/fr_test_screen"
        android:name="com.padyun.scripttools.biz.ui.fragment.FmScriptTestingScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <fragment
        android:id="@+id/fr_test_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.padyun.scripttools.biz.ui.fragment.FmScriptTestingLog"
        />

</LinearLayout>