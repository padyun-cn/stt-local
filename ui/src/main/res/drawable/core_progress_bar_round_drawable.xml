<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5.0dip" />
            <gradient
                    android:startColor="@color/core_progress_bar_bg"
                    android:centerColor="@color/core_progress_bar_bg"
                    android:centerY="0.75"
                    android:endColor="@color/core_progress_bar_bg"
                    android:angle="270"
            />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5.0dip" />
                <gradient
                        android:startColor="@color/core_progress_bar"
                        android:centerColor="@color/core_progress_bar"
                        android:centerY="0.75"
                        android:endColor="@color/core_progress_bar"
                        android:angle="270"
                />
               </shape>
        </clip>
    </item>
</layer-list>